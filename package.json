{
	"name": "ninja-tools",
	"displayName": "NinjaTools",
	"description": "Ninja tools, personal use only.",
	"version": "0.0.2",
	"publisher": "ninja-57",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ninja-tools.hero_drop",
				"title": "生成掉落特效"
			},
			{
				"command": "ninja-tools.log_readable",
				"title": "log可读化"
			},
			{
				"command": "ninja-tools.png_proc",
				"title": "png处理"
			}
		],
		"menus": {
			"editor/title/context": [
				{
					"when": "resourceExtname == '.log'",
					"command": "ninja-tools.log_readable",
					"group": "navigation"
				},
				{
					"when": "resourceExtname =~ /\\.png/",
					"command": "ninja-tools.png_proc",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/pngjs": "^6.0.1",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"pngjs": "^7.0.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	}
}
